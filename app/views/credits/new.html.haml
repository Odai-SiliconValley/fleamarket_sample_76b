= render partial: "products/header_sub"

.credit-new
  %h2.credit-new__title クレジットカード情報入力
  .credit-new__form
    = form_tag(pay_credits_path, method: :post, id: 'charge-form',  name: "inputForm") do
      .credit-new__form__field
        %label カード番号
        %span.credit-new__form__field__necessity 必須
        %br/
        = text_field_tag "number", "", class: "credit-new__form__field__text-form", placeholder: "例) 半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        %div.credit-new__form__field__cards
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?238737266"
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?238737266"
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?238737266"
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?238737266"
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?238737266"
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?238737266"
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?238737266"
      .credit-new__form__field--limit
        %label 有効期限
        %span.credit-new__form__field__necessity 必須
        .credit-new__form__field--limit__area
          %select#exp_month{name: "exp_month", type: "text", class: "credit-new__form__field__text-form--num"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span.credit-new__form__field__text-form--sub 月/
          %select#exp_year{name: "exp_year", type: "text", class: "credit-new__form__field__text-form--num"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span.credit-new__form__field__text-form--sub 年
      .credit-new__form__field
        %label セキュリティコード
        %spn.credit-new__form__field__necessity 必須
        %br/
        = text_field_tag "cvc", "", class: "credit-new__form__field__text-form", placeholder: "例) カードの背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
      .credit-new__form__submit
        = submit_tag "登録する", id: "token_submit", class: "credit-new__form__submit__btn"

= render partial: "products/footer_sub"


